pipeline{
  agent any
  stages{
    stage('Checkout Code') {
    steps {
        git branch: 'main',
            url: 'https://github.com/Chaitraputtabudhi/Projects.git',
            credentialsId: 'Chaitraputtabudhi'
    }
}

    stage('Build'){
      steps{
        sh 'echo "building the application."'
      }
    }
    stage('Test'){
      steps{
        sh 'echo "Testing the application"'
      }
    }
    stage('Deploy'){
      steps{
        sh 'echo "Deploying the application"'
      }
    }
  }
}
post{
  success{
    bat 'echo "build successful"'
  }
  failure{
    bat 'echo "build failed"'
  }
}
