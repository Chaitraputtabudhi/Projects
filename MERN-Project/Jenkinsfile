pipeline {
    agent any
    environment{
        IMAGE_NAME = 'Chaitraputtabudhi/Projects/MERN-Project'
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Chaitraputtabudhi/Projects.git',
                    credentialsId: 'Chaitraputtabudhi'
            }
        }

        stage('Build Docker Image') {
            steps {
                bat "dicker build -t %IMAGE_NAME%:latest ."
            }
        }

        stage('Push to Dockerhub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'chaitraputtabudhi', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]){
                    bat """
                    echo %DOCKER_PASS% |
                    docker login -u %DOCKER_USER% --password-stdin
                    docker push %IMAGE_NAME%:latest
                    docker logout
                    """
                }
            }
        }

        stage('Deploy') {
            steps {
                sh 'echo Deploying the application'
            }
        }
    }

    post {
        always {
            echo 'Cleaning up workspace...'
        }
        success {
            echo 'Pipeline finished successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
